<div class="userContainer">
      <div class="userContent">
        <div class="signInContainer"></div>
        <div>
          <form class="signInForm" action="/login" method="post">
            <p class="signMessage">Welcome to <span class="eventAlly">EVENT ALLY</span></p>
            <h2 class="signHeader">Sign In</h2>
            <label class="email signlabel" for="email">Enter your email address</label>
            <input class="signInput"
              type="text"
              id="email"
              name="email"
              placeholder="Email address"
              required
            />
            <label class="password signlabel" for="password">Enter your Password</label>
            <input class="signInput"
              type="password"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
            <button class="signInBtn" type="submit">Sign In</button>
            <a
              class="signUpLink"
              href="javascript:void(0);"
              onclick="showSignUpForm()"
              >Don't have an account? Sign up</a
            >
          </form>
        </div>