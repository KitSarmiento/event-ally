<div class="centerContainerUser">
<div class="userContainer">
    <div class="userContent">
      <div class="signInContainer">
        <div>
          <form class="signInForm" action="/login" method="post">
            <p class="signMessage">Welcome to <span class="eventAlly">EVENT ALLY</span></p>
            <h2 class="signHeader">Sign In</h2>
            <label class="email signlabel" for="email">Enter your email address</label>
            <input class="signInput" type="text" id="email-signIn" name="email" placeholder="Email address" required />
            <label class="password signlabel" for="password">Enter your Password</label>
            <input class="signInput" type="password" id="password-signIn" name="password" placeholder="Password" required />
            <button class="signInBtn" type="submit">Sign In</button>
            <a class="signUpLink" href="/signIn.js;" onclick="showSignUpForm()">Don't have an account? Sign up</a>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="userContainer">
    <div class="userContent">
      <div class="signInContainer">
        <div>
          <form class="signUpForm" action="/signup" method="post" style="display: none;">
            <p class="signMessage">Welcome to <span class="eventAlly">EVENT ALLY</span></p>
            <h2 class="signHeader">Sign Up</h2>
            <label class="email signlabel" for="email">Enter your email address</label>
            <input class="signInput" type="text" id="email-signUp" name="email" placeholder="Email address" required />
            <label class="password signlabel" for "password">Enter your Password</label>
            <input class="signInput" type="password" id="password-signUp" name="password" placeholder="Password" required />
            <button class="signupBtn" type="submit">Sign Up</button>
            <a class="signInLink" href="/signIn.js" onclick="showSignInForm()">Already have an account? Sign In</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
    <script src="/js/signIn.js"></script>
