<section id='new-event-screen'>

   <div class='newItemContainerNewEvent'>
        <button id='dashboardButton'>Back to dashboard</button>
      </div>

  <section class='introduction-section-new-event'>
    <article class='introduction-article'>

   

      <h1 class='client-event'>New event</h1>

      <div class="newEventGroup">
      <p class='app-introduction-paragraph'>What is the title of your event?</p>
      <input id='new-user-event' required />
</div>

    <div class="newEventGroup">
      <p class='app-introduction-paragraph'>What is the category of your event?</p>
      <select id='newEventCategory'>
        <option>Birthday</option>
        <option>Graduation</option>
        <option>Wedding</option>
        <option>Birth</option>
        <option>Vacations</option>
        <option>Travel</option>
        <option>Achievement</option>
        <option>Career</option>
        <option>Pets</option>
        <option>Family</option>
        <option>Campaigns</option>
        <option>Causes</option>
        <option>Solidarity</option>
        <option>Charity</option>
        <option>Hobbies</option>
        <option>Holidays</option>
        <option>Investments</option>
        <option>Clothing</option>
        <option>Health</option>
        <option>Other</option>
      </select>
      </div>

    <div class="newEventGroup">
      <p class='app-introduction-paragraph'>When will the event take place?</p>

      <div id='calendarContainer'>

        <div id='date-selection'>
          <label for='from-date' class='calendar-label'>From:</label>
          <input type='date' id='fromDate' />
          <label for='to-date' class='calendar-label'>To:</label>
          <input type='date' id='toDate' />
        </div>

      </div>

      </div>

      <button class='button-9' id='createNewEventButton' role='button'>Create
        event</button>

    </article>
  </section>
</section>

<script src='/assets/js/newEvent.js'></script>
